@model List<VeyselAlanWebPage.Models.PortfolioItem>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli - Projeler</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f9fafb;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .form-container {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table-container {
            margin-top: 2rem;
            padding: 1.5rem;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
        }

        .btn-primary {
            background-color: #2563eb;
            color: white;
            font-size: 1rem;
            font-weight: bold;
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            cursor: pointer;
            margin-bottom: 8rem;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <!-- Yeni Proje Ekle Butonu -->
            <a href="@Url.Action("Create", "Admin")" class="btn-primary">Yeni Proje Ekle</a>

            <div class="table-container">
                <!-- Projeler Tablosu -->
                <table>
                    <thead>
                        <tr>
                            <th>Proje Adı</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProjectName</td>
                                <td>@item.Description</td>
                                <td>@item.Status</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" class="text-blue-600">Düzenle</a> |
                                    <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" class="text-red-600">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
